modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx tsc && node dist/app.js"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "npx tsc && node dist/app.js"]

[[ports]]
localPort = 5000
externalPort = 80
